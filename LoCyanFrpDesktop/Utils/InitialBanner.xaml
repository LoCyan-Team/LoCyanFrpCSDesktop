<ui:UiWindow 
        x:Class="LoCyanFrpDesktop.Utils.InitialBanner"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoCyanFrpDesktop.Utils"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="Init" Height="300" Width="600"
        WindowStartupLocation="CenterScreen"
        Icon="/Resource/favicon.ico"
        AllowDrop="True"
        ExtendsContentIntoTitleBar="True"
        WindowStyle="None"
        Background="Transparent"
        >
    <Grid>
        <Border CornerRadius="5" Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="这是banner" FontSize="72" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBlock Grid.Row="1" Name="Output" HorizontalAlignment="Center"/>
                <TextBlock Grid.Row="2" Name="Tips" FontSize="10" Text="他们说没有banner，所以我也不知道怎么写了" Foreground="Gray" HorizontalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</ui:UiWindow>
